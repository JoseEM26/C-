@model IEnumerable<POOI_T3_DanielAlexanderDeLaCruzBriceño.Models.Empleados>

@{
    ViewBag.Title = "Index";
}

<h2>Filtrar Empleado</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using (Html.BeginForm())
{
    <label>Nombre,Apellidos o DNI del Empleado </label>
    @Html.TextBox("filtro", "")
    <button>Consultar</button>

}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IdEmpleado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Apellidos)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DNI)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdEmpleado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellidos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DNI)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new {  id=item.IdEmpleado  }) |
                @Html.ActionLink("Detalles", "Details", new { id=item.IdEmpleado }) |
                @Html.ActionLink("Eliminar", "Delete", new {  id=item.IdEmpleado })
            </td>
        </tr>
    }

</table>
